---
import Container from '../components/ui/Container.astro';
import Text from '../components/ui/Text.tsx';
import Food from '../components/icons/food.tsx';
import CartButton from '../components/ui/CartButton';
import CartAside from '../components/CartAside';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Biryani:wght@200;300;400;600;700;800;900&family=DM+Serif+Text:ital@0;1&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-whitecontrast pb-10">
		<Container >
			<nav class="w-full py-4 grid grid-cols-8">
				<div class="col-span-3">
					<a href="/">Logo</a>
				</div>
				<div class="col-span-3"></div>
				<div class="col-span-2 flex justify-end items-center">
					<CartButton client:load/>
				</div>
				<CartAside client:load />
			</nav>
			<slot />
		</Container>
		<footer/>
	</body>
</html>


<style is:global>
	.form-4-cols{
		grid-template-columns: repeat(auto-fill, minmax(min(100%, max(200px, calc(20% - 1rem))), 1fr));
		gap: 1rem;
		display: grid;
	}
</style>